{
  "name": "automabase",
  "version": "0.1.0",
  "description": "Automabase - Fullstack Monorepo with Bun",
  "type": "module",
  "workspaces": [
    "apps/*",
    "functions/*",
    "packages/*",
    "webapps/*",
    "services/*",
    "e2e"
  ],
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "setup": "bun scripts/setup.ts",
    "setup:db": "bun scripts/setup-db.ts",
    "dev": "bun scripts/dev.ts",
    "create": "bun scripts/create.ts",
    "check": "bun scripts/check.ts",
    "test": "bun scripts/test.ts",
    "deploy": "bun scripts/deploy.ts",
    "clean": "turbo run clean && rimraf dist build .aws-sam .turbo merged-template.yaml packaged.yaml"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.965.0",
    "@aws-sdk/lib-dynamodb": "^3.965.0",
    "@biomejs/biome": "^2.3.11",
    "@biomejs/cli-darwin-arm64": "^2.3.11",
    "@biomejs/cli-darwin-x64": "^2.3.11",
    "@biomejs/cli-linux-arm64": "^2.3.11",
    "@biomejs/cli-linux-x64": "^2.3.11",
    "@biomejs/cli-win32-arm64": "^2.3.11",
    "@biomejs/cli-win32-x64": "^2.3.11",
    "@noble/ed25519": "^3.0.0",
    "@rollup/rollup-darwin-arm64": "^4.55.1",
    "@rollup/rollup-darwin-x64": "^4.55.1",
    "@rollup/rollup-linux-arm64-gnu": "^4.55.1",
    "@rollup/rollup-linux-x64-gnu": "^4.55.1",
    "@rollup/rollup-win32-arm64-msvc": "^4.55.1",
    "@rollup/rollup-win32-x64-msvc": "^4.55.1",
    "@types/aws-lambda": "^8.10.159",
    "@types/bun": "^1.3.5",
    "@types/node": "^20.19.27",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^1.6.1",
    "concurrently": "^9.2.1",
    "elysia": "^1.4.21",
    "esbuild": "^0.27.2",
    "jose": "^6.1.3",
    "markdownlint-cli": "^0.47.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.1.2",
    "turbo": "^2.7.3",
    "turbo-darwin-64": "^2.7.3",
    "turbo-darwin-arm64": "^2.7.3",
    "turbo-linux-64": "^2.7.3",
    "turbo-linux-arm64": "^2.7.3",
    "turbo-windows-64": "^2.7.3",
    "turbo-windows-arm64": "^2.7.3",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "ws": "^8.19.0"
  }
}