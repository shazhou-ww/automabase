{
  "name": "automabase",
  "version": "0.1.0",
  "description": "Automabase - Fullstack Monorepo with Bun",
  "type": "module",
  "workspaces": [
    "functions/*",
    "packages/*",
    "webapps/*",
    "services/*"
  ],
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "keygen": "bun scripts/keygen.ts",
    "create:function": "bun scripts/create.ts function",
    "create:package": "bun scripts/create.ts package",
    "create:webapp": "bun scripts/create.ts webapp",
    "create:service": "bun scripts/create.ts service",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint:ts": "biome check . && biome format .",
    "lint:ts:fix": "biome check --write . && biome format --write .",
    "lint:md": "markdownlint '**/*.md' --ignore '**/node_modules/**' --ignore '**/dist/**' --ignore '**/build/**' --ignore '**/.aws-sam/**' --ignore '**/.turbo/**' --ignore '**/templates/**'",
    "lint:md:fix": "markdownlint '**/*.md' --fix --ignore '**/node_modules/**' --ignore '**/dist/**' --ignore '**/build/**' --ignore '**/.aws-sam/**' --ignore '**/.turbo/**' --ignore '**/templates/**'",
    "lint": "bun run lint:ts && bun run lint:md",
    "lint:fix": "bun run lint:ts:fix && bun run lint:md:fix",
    "build": "turbo run build",
    "build:functions": "turbo run build --filter='./functions/*' && bun scripts/copy-function-manifests.ts",
    "sam:merge": "bun scripts/merge-templates.ts",
    "sam:build": "bun run build:functions && bun run sam:merge && sam build --template-file merged-template.yaml",
    "sam:validate": "bun run sam:merge && sam validate --template-file merged-template.yaml",
    "sam:local": "bun run sam:build && sam local start-api --template-file merged-template.yaml --env-vars env.json --skip-pull-image --docker-network bridge",
    "sam:invoke": "bun run sam:build && sam local invoke --template-file merged-template.yaml --skip-pull-image",
    "sam:package": "bun run sam:build && sam package --template-file merged-template.yaml --output-template-file packaged.yaml",
    "sam:deploy": "bun run sam:build && sam deploy --template-file merged-template.yaml",
    "sam:deploy:guided": "bun run sam:build && sam deploy --template-file merged-template.yaml --guided",
    "clean": "turbo run clean && rimraf dist build .aws-sam .turbo merged-template.yaml packaged.yaml"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@biomejs/cli-darwin-arm64": "^2.3.11",
    "@biomejs/cli-darwin-x64": "^2.3.11",
    "@biomejs/cli-linux-arm64": "^2.3.11",
    "@biomejs/cli-linux-x64": "^2.3.11",
    "@biomejs/cli-win32-arm64": "^2.3.11",
    "@biomejs/cli-win32-x64": "^2.3.11",
    "@rollup/rollup-darwin-arm64": "^4.55.1",
    "@rollup/rollup-darwin-x64": "^4.55.1",
    "@rollup/rollup-linux-arm64-gnu": "^4.55.1",
    "@rollup/rollup-linux-x64-gnu": "^4.55.1",
    "@rollup/rollup-win32-arm64-msvc": "^4.55.1",
    "@rollup/rollup-win32-x64-msvc": "^4.55.1",
    "@types/aws-lambda": "^8.10.159",
    "@types/bun": "^1.3.5",
    "@types/node": "^20.19.27",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^1.6.1",
    "elysia": "^1.4.21",
    "esbuild": "^0.27.2",
    "jose": "^6.1.3",
    "markdownlint-cli": "^0.47.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.1.2",
    "turbo": "^2.7.3",
    "turbo-darwin-64": "^2.7.3",
    "turbo-darwin-arm64": "^2.7.3",
    "turbo-linux-64": "^2.7.3",
    "turbo-linux-arm64": "^2.7.3",
    "turbo-windows-64": "^2.7.3",
    "turbo-windows-arm64": "^2.7.3",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^1.6.1"
  }
}
