{
  "name": "@automabase/automa",
  "version": "1.0.0",
  "description": "CLI tool for Automabase - manage tenants, automatas, and events",
  "type": "module",
  "bin": {
    "automa": "./bin/automa"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --write src"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "cli-table3": "^0.6.5",
    "@inquirer/prompts": "^7.2.1",
    "chalk": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
