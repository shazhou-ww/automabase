{
  "name": "@automabase/function-event-stream",
  "version": "1.0.0",
  "description": "Lambda function: event-stream - DynamoDB-based persistent event streaming",
  "main": "src/index.ts",
  "scripts": {
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node24 --format=cjs --outfile=dist/index.js --external:\"@aws-sdk/*\" --minify --sourcemap",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@types/aws-lambda": "^8.10.130"
  }
}
